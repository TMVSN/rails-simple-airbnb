<H1>Flat Details</H1>

<div class="map">
<h1>placeholder map</h1>
</div>

<div class="container margin-top-negative">
  <div class="d-flex">
    <div class="details">
      <div class="card">
        <h2><%= @flat.name %></h2>
        <h3><%= @flat.address %></h3>
      </div>
      <div class="card">
        <h2>A bit more about this flat...</h2>
        <h3><%= @flat.description %></h3>
      </div>
      <div class="card">
        <div class="d-flex">
          <i class="fas fa-user-friends"><%= @flat.number_of_guest %></i>
          <i class="fas fa-euro-sign"></i><%= @flat.price_per_night %></i>
        </div>
      </div>
    </div>
  </div>
</div>

<%= link_to "Go back to list", flats_path %>